@page
@model BusquedaModel
@{
    ViewData["Title"] = "Busqueda";
}

<!-- Metadatos -->
<head>
    <!-- Enlace al archivo CSS con los estilos de la página -->
    <!-- El valor true hace que la versión se agregue a la URL -->
    <link rel="stylesheet" href="~/css/Pages/Busqueda/Index.css" asp-append-version="true" />
    <script src="~/js/Pages/Busqueda/filtrador.js"></script>
    <script src="~/js/Pages/Busqueda/ordenador.js"></script>
    <script src="~/js/Pages/Busqueda/paginador.js"></script>
    <!-- Enlace al stylesheet de Google para agregar íconos de flechas -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script>

        // Función de traducción de codificación
        function traducirCodificacion(cadena) {
            var elementoTemporal = document.createElement("div");
            elementoTemporal.innerHTML = cadena;
            return elementoTemporal.textContent;
        }

        // Obtener resultados de busqueda principal
        function obtenerResultados() {
            var resultadosDecodificados = traducirCodificacion('@Model.resultadosBusqueda')
            return JSON.parse(resultadosDecodificados);
        }

        // Cliente
        var resultados = obtenerResultados();
        var filtrador = new FiltradorDeBusqueda();
        var ordenador = new OrdenadorDeBusqueda();;
        var paginador = new Paginador(@Model.resultadosPorPagina);
        var paginaDefault = @Model.paginaDefault;
    </script>
    <script src="~/js/Pages/Busqueda/cliente.js?v=543"></script>
</head>
<div>
    <div class="BusquedaIndice-contenedor-fila">
        <div class="BusquedaIndice-contenedor">
            <form class="BusquedaIndice-contenedor-form" method="get">
                <div class="BusquedaIndice-contenedor-fila">
                    <div style="width:85%;">
                        <div class="BusquedaIndice-contenedor-fila">
                            <div class="BusquedaIndice-contenedor-caja-texto">
                                <div class="BusquedaIndice-contenedor-texto">
                                    Producto
                                </div>
                                <div class="BusquedaIndice-caja-texto">
                                    <!-- Cuadro de texto para el nombre del producto -->
                                    <input type="text" name="nombreProducto" asp-for="producto" id="CajaDeTextoProducto" autocomplete="off">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Botón de búsqueda -->
                    <button class="BusquedaIndice-boton-busqueda" onclick="return validarFormulario();">
                        <!-- Icono de búsqueda -->
                        <img src="~/img/white_search_icon.png" id="imagenBusqueda" alt="Buscar" class="BusquedaIndice-icono-busqueda" />
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="BusquedaIndice-contenedor-fila">
        <form class="BusquedaIndice-filtros">
            <!-- Botones de filtros -->
            <button type="button" class="BusquedaIndice-boton-filtros" onclick="filtrar()"> Aplicar filtros</button>
            <button type="button" class="BusquedaIndice-boton-filtros" onclick="limpiarFiltros()" style="margin-bottom:5px;"> Limpiar filtros</button>
            <div class="BusquedaIndice-contenedor-filtros" id="ContenedorFiltros">
                <div class="BusquedaIndice-dropdown" onmouseenter="showdropdown(1)" onmouseleave="hidedropdown(1)">
                    <button type="button" class="BusquedaIndice-boton-dropdown" id="BotonFiltro1">Provincia</button>
                    <div class="BusquedaIndice-dropdown-content" id="ContenidoFiltro1">
                        <!-- Contenido del menú desplegable -->
                        @{
                            foreach (var provincia in Model.provinciasV)
                            {
                                <label>
                                    <input type="checkbox" name="provincia" value="@provincia" /> @provincia
                                </label>
                            }
                        }
                    </div>
                </div>
                <div class="BusquedaIndice-dropdown" onmouseenter="showdropdown(2)" onmouseleave="hidedropdown(2)">
                    <button type="button" class="BusquedaIndice-boton-dropdown" id="BotonFiltro2">Cantón</button>
                    <div class="BusquedaIndice-dropdown-content" id="ContenidoFiltro2">
                        <!-- Contenido del menú desplegable -->
                        @{
                            foreach (var canton in Model.cantonesV)
                            {
                                <label>
                                    <input type="checkbox" name="canton" value="@canton" /> @canton
                                </label>
                            }
                        }
                    </div>
                </div>
                <div class="BusquedaIndice-dropdown" onmouseenter="showdropdown(3)" onmouseleave="hidedropdown(3)">
                    <button type="button" class="BusquedaIndice-boton-dropdown" id="BotonFiltro3">Tienda</button>
                    <div class="BusquedaIndice-dropdown-content" id="ContenidoFiltro3">
                        <!-- Contenido del menú desplegable -->
                        @{
                            foreach (var tienda in Model.tiendasV)
                            {
                                <label>
                                    <input type="checkbox" name="tienda" value="@tienda" /> @tienda
                                </label>
                            }
                        }
                    </div>
                </div>
                <div class="BusquedaIndice-dropdown" onmouseenter="showdropdown(4)" onmouseleave="hidedropdown(4)">
                    <button type="button" class="BusquedaIndice-boton-dropdown" id="BotonFiltro4">Marca</button>
                    <div class="BusquedaIndice-dropdown-content" id="ContenidoFiltro4">
                        <!-- Contenido del menú desplegable -->
                        @{
                            foreach (var marca in Model.marcasV)
                            {
                                <label>
                                    <input type="checkbox" name="marca" value="@marca" /> @marca
                                </label>
                            }
                        }
                    </div>
                </div>
            </div>
        </form>
        <!-- Tabla de resultados -->
        <div class="BusquedaIndice-tabla">
            <table>
                <thead>
                    <tr>
                        <th style="padding-left:10px;">
                            <!-- Nombre de columna -->
                            @Html.DisplayNameFor(model => model.productoVM.nombre)
                            <!-- Flecha de ordenamiento descendiente -->
                            <span id="DescendenteNombre" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_less
                            </span>
                            <!-- Flecha de ordenamiento ascendiente -->
                            <span id="AscendenteNombre" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_more
                            </span>
                        </th>
                        <th>
                            <!-- Nombre de columna -->
                            @Html.DisplayNameFor(model => model.productoVM.categoria)
                            <!-- Flecha de ordenamiento descendiente -->
                            <span id="DescendenteCategoria" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_less
                            </span>
                            <!-- Flecha de ordenamiento ascendiente -->
                            <span id="AscendenteCategoria" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_more
                            </span>
                        </th>
                        <th>
                            <!-- Nombre de columna -->
                            @Html.DisplayNameFor(model => model.productoVM.marca)
                            <!-- Flecha de ordenamiento descendiente -->
                            <span id="DescendenteMarca" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_less
                            </span>
                            <!-- Flecha de ordenamiento ascendiente -->
                            <span id="AscendenteMarca" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_more
                            </span>
                        </th>
                        <th style="padding-left:37px">
                            <!-- Nombre de columna -->
                            <label class="BusquedaIndice-titulo-columna" onclick="ordenar('precio')">
                                @Html.DisplayNameFor(model => model.productoVM.precio)
                            </label>
                            <!-- Flecha de ordenamiento descendiente -->
                            <span id="DescendentePrecio" class="material-symbols-outlined BusquedaFlechaOrdenamiento" onclick="ordenar('precio')">
                                expand_less
                            </span>
                            <!-- Flecha de ordenamiento ascendiente -->
                            <span id="AscendentePrecio" class="material-symbols-outlined BusquedaFlechaOrdenamiento" onclick="ordenar('precio')">
                                expand_more
                            </span>
                        </th>
                        <th style="padding-left:24px;">
                            <!-- Nombre de columna -->
                            @Html.DisplayNameFor(model => model.productoVM.unidad)
                            <!-- Flecha de ordenamiento descendiente -->
                            <span id="DescendenteUnidad" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_less
                            </span>
                            <!-- Flecha de ordenamiento ascendiente -->
                            <span id="AscendenteUnidad" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_more
                            </span>
                        </th>
                        <th style="padding-left:20px;">
                            <!-- Nombre de columna -->
                            @Html.DisplayNameFor(model => model.productoVM.fecha)
                            <!-- Flecha de ordenamiento descendiente -->
                            <span id="DescendenteFecha" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_less
                            </span>
                            <!-- Flecha de ordenamiento ascendiente -->
                            <span id="AscendenteFecha" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_more
                            </span>
                        </th>
                        <th style="padding-left:20px;">
                            <!-- Nombre de columna -->
                            @Html.DisplayNameFor(model => model.productoVM.tienda)
                            <!-- Flecha de ordenamiento descendiente -->
                            <span id="DescendenteTienda" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_less
                            </span>
                            <!-- Flecha de ordenamiento ascendiente -->
                            <span id="AscendenteTienda" class="material-symbols-outlined BusquedaFlechaOrdenamiento">
                                expand_more
                            </span>
                        </th>
                        <th>
                            <!-- Nombre de columna -->
                            <label class="BusquedaIndice-titulo-columna" onclick="ordenar('provincia')">
                                @Html.DisplayNameFor(model => model.productoVM.provincia)
                            </label>
                            <!-- Flecha de ordenamiento descendiente -->
                            <span id="DescendenteProvincia" class="material-symbols-outlined BusquedaFlechaOrdenamiento" onclick="ordenar('provincia')">
                                expand_less
                            </span>
                            <!-- Flecha de ordenamiento ascendiente -->
                            <span id="AscendenteProvincia" class="material-symbols-outlined BusquedaFlechaOrdenamiento" onclick="ordenar('provincia')">
                                expand_more
                            </span>
                        </th>
                        <th style="padding-left:10px;">
                            <!-- Nombre de columna -->
                            <label class="BusquedaIndice-titulo-columna" onclick="ordenar('canton')">
                                @Html.DisplayNameFor(model => model.productoVM.canton)
                            </label>
                            <!-- Flecha de ordenamiento descendiente -->
                            <span id="DescendenteCanton" class="material-symbols-outlined BusquedaFlechaOrdenamiento" onclick="ordenar('canton')">
                                expand_less
                            </span>
                            <!-- Flecha de ordenamiento ascendiente -->
                            <span id="AscendenteCanton" class="material-symbols-outlined BusquedaFlechaOrdenamiento" onclick="ordenar('canton')">
                                expand_more
                            </span>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="BusquedaIndice-tabla-resultados" id="CuerpoResultados">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Paginación -->
<div class="BusquedaIndice-contenedor-paginacion">
    <div class="BusquedaIndice-contenedor-caja-paginacion">
        <div id="PaginaPrevia" class="BusquedaIndice-boton-paginacion" onclick="pasarPagina(productosVM.IndicePagina - 1)">
            Anterior
        </div>
        <div id="SinPaginaPrevia" class="BusquedaIndice-boton-paginacion-deshabilitado">
            Anterior
        </div>

        <span id="TextoPaginacion" class="BusquedaIndice-texto-paginacion">  </span>

        <div id="PaginaSiguiente" class="BusquedaIndice-boton-paginacion" onclick="pasarPagina(productosVM.IndicePagina + 1)">
            Siguiente
        </div>
        <div id="SinPaginaSiguiente" class="BusquedaIndice-boton-paginacion-deshabilitado">
            Siguiente
        </div>
    </div>
</div>

<script>
    ordenador.esconderFlechas();
</script>
<script>
    var productosVM = paginar(paginaDefault);

    // Renderizar
    renderizarPaginacion();
    renderizarTabla(productosVM);

    cajaProducto = document.getElementById("CajaDeTextoProducto");

    // Validar formulario
    function validarFormulario() {
        if (!cajaProducto.value) {
            return false;
        } else {
            return true;
        }
    }
</script>
<script src="~/js/Pages/Busqueda/dropdown.js"></script>