@page
@model LoCoMPro.Pages.AgregarProducto.AgregarProdModel
@{
    ViewData["Title"] = "Agregar Producto";
}


<head>
    <!-- Titulo de la pagina -->
    <title>Agregar Producto</title>
    <!-- Archivo css -->
    <link rel="stylesheet" href="~/css/Pages/AgregarProducto/AgregarProducto.css" asp-append-version="true" />
</head>


<body>
    <form method="post">
        <!-- Contenedor para el formulario -->
        <div class="AgregarProd-contenedor-central">
            <!-- Titulo de la pagina -->
            <div class="AgregarProd-contenedor-texto">
                <label class="AddP-tituloAgregarProd-titulo">Producto</label>
            </div>
            <!-- Agregar Tienda -->
            <div class="AgregarProd-contenedor-texto">
                <label for="TiendaTexto">Tienda:</label>
                <input type="text" class="AgregarProd-caja-texto-estandar" id="Tienda" name="Tienda" s>
               <div class="input-group-append">
                    <button class="AgregarProd-boton-estandar" type="button">Agregar Tienda</button>
                </div>
            </div>
            <!-- Agregar Producto -->
            <div class="AgregarProd-contenedor-texto">
                <label for="ProductoTexto">Producto:</label>
                <input type="text" class="AgregarProd-caja-texto-estandar" id="Producto" name="Producto">
                <div class="input-group-append">
                    <button class="AgregarProd-boton-estandar" type="button">Agregar Producto</button>
                </div>
            </div>
            <!-- Agregar Precio -->
            <div class="AgregarProd-contenedor-texto">
                <label for="PrecioTexto">Precio:</label>
                <input type="text" class="AgregarProd-caja-texto-precio" id="Precio" name="Precio">
                <div class="input-group-append">
                    <span class="AgregarProd-texto"> colones por </span>
                    <input type="text" class="AgregarProd-caja-texto-unidad" id="Unidad" name="Unidad">
                </div>
            </div>
            <!-- Agregar Imagen -->
            <div class="AgregarProd-contenedor-texto">
                <button type="button" class="AgregarProd-boton-imagen">Agregar Imagen</button>
            </div>
            <!-- Agregar Etiqueta -->
            <div class="AgregarProd-contenedor-texto">
                <label for="EtiquetaTexto">Etiqueta:</label>
                <input type="text" class="AgregarProd-caja-texto-etiqueta" id="Etiqueta" name="Etiqueta">
            </div>
            <!-- Descripción -->
            <div class="AgregarProd-contenedor-texto">
                <label for="DescripcionTexto">Descripcion:</label>
                <input type="text" class="AgregarProd-caja-texto-descripcion" id="Descripcion" name="Descripcion">
            </div>
            <!-- Botones de aceptar y cancelar -->
            <div class="AgregarProd-contenedor-texto">
                <button class="AgregarProd-boton-estandar" type="submit" asp-page-handler="Aceptar">Aceptar</button>
                <button class="AgregarProd-boton-estandar" type="submit" asp-page-handler="Cancelar">Cancelar</button>
            </div>
        </div>
    </form>
</body>